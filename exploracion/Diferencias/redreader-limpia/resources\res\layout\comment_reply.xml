<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <Spinner android:id="@+id/comment_reply_username" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp"/>
    <CheckBox android:id="@+id/comment_reply_inbox" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:checked="true" android:text="@string/send_replies_to_inbox"/>
    <EditText android:id="@+id/comment_reply_text" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:scrollHorizontally="false" android:singleLine="false" android:inputType="none|text|textCapSentences|textMultiLine"/>
    <TextView android:id="@+id/comment_parent_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:textIsSelectable="true"/>
</LinearLayout>
