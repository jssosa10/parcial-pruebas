<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/search_listing_header" android:padding="8dp" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout android:id="@+id/search_listing_header_query" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:id="@+id/search_listing_header_query_editText" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/search_listing_header_query" android:maxLines="1" android:layout_weight="1" android:inputType="text"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout android:id="@+id/search_listing_header_sub" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:id="@+id/search_listing_header_sub_editText" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/search_listing_header_sub" android:maxLines="1" android:layout_weight="1" android:inputType="textNoSuggestions"/>
    </android.support.design.widget.TextInputLayout>
    <Button android:id="@+id/search_listing_header_search" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/action_search"/>
</LinearLayout>
