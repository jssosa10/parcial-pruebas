<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <Spinner android:id="@+id/post_submit_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="2dp" android:layout_marginRight="10dp" android:layout_marginBottom="2dp"/>
    <Spinner android:id="@+id/post_submit_username" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="2dp" android:layout_marginRight="10dp" android:layout_marginBottom="2dp"/>
    <EditText android:id="@+id/post_submit_subreddit" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:hint="@string/post_submit_subreddit_hint" android:scrollHorizontally="true" android:singleLine="true" android:inputType="textNoSuggestions"/>
    <EditText android:id="@+id/post_submit_title" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:hint="@string/post_submit_title_hint" android:scrollHorizontally="true" android:singleLine="true" android:inputType="textCapSentences"/>
    <EditText android:id="@+id/post_submit_body" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:scrollHorizontally="false" android:singleLine="false" android:inputType="none|text|textCapSentences|textMultiLine"/>
    <CheckBox android:id="@+id/post_submit_send_replies_to_inbox" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:checked="true" android:text="@string/send_replies_to_inbox"/>
    <CheckBox android:id="@+id/post_submit_mark_nsfw" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:checked="false" android:text="@string/post_submit_mark_nsfw"/>
    <CheckBox android:id="@+id/post_submit_mark_spoiler" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:checked="false" android:text="@string/post_submit_mark_spoiler"/>
</LinearLayout>
